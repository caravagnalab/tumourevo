nextflow_process {

    name "Test Process CNAQC"
    script "modules/local/CNAqc/main.nf"
    process "CNAQC"

    test("Should run without failures") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
                meta = [
                    id : "idProva",
                    tumour_sample: "Set6_42",
                    cancer_type: "PANCANCER" 
                ]
                
                // From cna2cnaqc
                cna_rds = file("${projectDir}/results/formatter/cna2cnaqc/MSeq/Set06/Set6_42/MSeq_Set06_Set6_42_cna.rds", checkIfExists: true)
                // From vcf2cnaqc
                snv_rds = file("${projectDir}/results/formatter/vcf2cnaqc/MSeq/Set06/Set6_42/MSeq_Set06_Set6_42_snv.rds", checkIfExists: true)
                
                // Create a tuple with metadata and file path
                input[0] = tuple(meta, cna_rds)
                input[1] = tuple(meta, snv_rds)
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
