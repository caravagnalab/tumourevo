nextflow_process {

    name "Test Process CTREE"
    script "modules/local/ctree/main.nf"
    process "CTREE"

    test("Should run without failures") {

        when {
            params {
                mode = "singlesample"
            }
            process {
                """
                meta = [
                    id : "MSeq_Set06_Set6_42",
                    dataset : "MSeq",
                    patient : "Set06",
                    tumour_sample: "Set6_42",
                    normal_sample: "54_N",
                    cancer_type: "PANCANCER" 
                ]
                ctree_input = 
                input[0] = tuple("MSeq_Set06_Set6_42", "Set06", "Set6_42", ctree_input)
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
