params { 
    publish_dir = "$baseDir/test_publish"
    outdir = "$baseDir/test_results"
    mode = "single_sample"
    testdata_base_path = 'https://raw.githubusercontent.com/nicola-calonaci/test-datasets/evoverse/data'
}

process {
    executor = 'local'
}